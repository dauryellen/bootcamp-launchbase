{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>

    <section class="details">
      <h3>Detalhes</h3>

      <div class="item">

        <div class="item">
          <div>Nome completo</div>
          <div>{{ teacher.name }}</div>
        </div>
        <div class="item">
          <div>Idade</div>
          <div>{{ teacher.age }}</div>
        </div>
        <div class="item">
          <div>Escolaridade</div>
          <div>{{ teacher.graduation }}</div>
        </div>
        <div class="item">
          <div>Tipo de aula</div>
          <div>{{ "Presencial" if teacher.type == "P" else "À distância" }}</div>
        </div>
        <div class="item">
          <div>Área de atuação</div>
          <div>
            {% for class in teacher.classes %}
              <span>{{ class }}</span>
            {% endfor %}
          </div>
        </div>
        <div class="item">
          <div>Desde</div>
          <div>{{ teacher.created_at }}</div>
        </div>

        <button type="submit">Editar</button>
      </section>
    </div>
  {% endblock content %}