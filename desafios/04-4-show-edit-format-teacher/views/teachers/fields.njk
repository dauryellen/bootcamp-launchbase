<div class="item">
  <div>Avatar URL</div>
  <div>
    <input type="url" name="avatar_url" placeholder="Ex.: http://" value="{{ teacher.avatar_url }}" required="required">
  </div>
</div>

<div class="item">
  <div>Nome completo</div>
  <div>
    <input type="text" name="name" placeholder="Ex.: Joe Doe" value="{{ teacher.name }}" required="required">
  </div>
</div>
<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input type="date" name="birth" value="{{ teacher.birth }}" required="required">
  </div>
</div>
<div class="item">
  <div>Escolaridade</div>
  <div>
    <select name="graduation" id="graduation">
      <option value="medio" {% if teacher.graduation == "medio" %} selected="selected" {% endif %}>Ensino Médio Completo</option>
      <option value="superior" {% if teacher.graduation == "superior" %} selected="selected" {% endif %}>Ensino Superior Completo</option>
      <option value="mestrado" {% if teacher.graduation == "mestrado" %} selected="selected" {% endif %}>Mestrado</option>
      <option value="doutorado" {% if teacher.graduation == "doutorado" %} selected="selected" {% endif %}>Doutorado</option>
    </select>
  </div>
</div>
<div class="item">
  <div>Tipo de aula</div>
  <div>
    <span>
      <input type="radio" name="type" value="P" {% if teacher.type == "P" %} checked="checked" {% endif %}>Presencial
    </span>
    <span>
      <input type="radio" name="type" value="D" {% if teacher.type == "D" %} checked="checked" {% endif %}>À distância
    </span>
  </div>
</div>
<div class="item">
  <div>Área de atuação</div>
  <div>
    <input type="text" name="classes" placeholder="Ex.: Matemática,História" value="{{ teacher.classes }}" required="required">
  </div>
</div>

<button type="submit">Salvar</button>