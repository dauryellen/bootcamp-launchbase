{% extends "layout.njk" %}

{% block content %}
  <form class="card" method="POST" action="/teachers">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/8317102/500x500) no-repeat center center / cover"></section>

    <section class="details">
      <h3>Novo Professor</h3>

      <div class="item">
        <div>Avatar URL</div>
        <div>
          <input type="url" name="avatar_url" placeholder="Ex.: http://" required="required">
        </div>
      </div>

      <div class="item">
        <div>Nome completo</div>
        <div>
          <input type="text" name="name" placeholder="Ex.: Joe Doe" required="required">
        </div>
      </div>
      <div class="item">
        <div>Data de nascimento</div>
        <div>
          <input type="date" name="birth" required="required">
        </div>
      </div>
      <div class="item">
        <div>Escolaridade</div>
        <div>
          <select name="graduation" id="graduation">
            <option value="medio">Ensino Médio Completo</option>
            <option value="superior">Ensino Superior Completo</option>
            <option value="mestrado">Mestrado</option>
            <option value="doutorado">Doutorado</option>
          </select>
        </div>
      </div>
      <div class="item">
        <div>Tipo de aula</div>
        <div>
          <span>
            <input type="radio" name="type" value="P">Presencial
          </span>
          <span>
            <input type="radio" name="type" value="D" checked="checked">À distância
          </span>
        </div>
      </div>
      <div class="item">
        <div>Área de atuação</div>
        <div>
          <input type="text" name="classes" placeholder="Ex.: Matemática,História" required="required">
        </div>
      </div>

      <button type="submit">Salvar</button>
    </section>
  </form>
{% endblock content %}